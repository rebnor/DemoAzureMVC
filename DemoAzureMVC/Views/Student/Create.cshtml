@model DemoAzureMVC.Shared.Student

@{
    ViewData["Title"] = "Create";
}

<div class="center-div">
    <div class="background-div">
        <img src="~/css/paper.png" width="600" /> 
    </div>
    <div class="opacity-img">
        <img src="~/css/logoPNG.png" width="400"  />
    </div>    
    <form asp-action="Create">
        <h1>New Student</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Firstname:</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label class="control-label">Lastname:</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <label class="control-label">Wizard or Witch</label>
            <div class="form-group form-radio">
                <div>
                    <input type="radio" asp-for="IsWizard" value="true" id="wizard" />
                    <label for="wizard">Wizard</label>
                </div>
                <div>
                    <input type="radio" asp-for="IsWizard" value="false" id="witch" />
                    <label for="witch">Witch</label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Picture url:</label>
                <input asp-for="PictureUrl" class="form-control" />
                <span asp-validation-for="PictureUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
    </form>
    <div>
        <a asp-action="Index" asp-controller="Student">Back to List</a>
    </div>
    <img src="~/css/feather.png" width="200" id="feather"/>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
